{
  "comments": {
    "blockComment": ["//*", "*//"]
  },
  "brackets": [
    ["[", "]"],
    ["{", "}"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["[", "]"],
    ["{", "}"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["{", "}"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#region\\b",
      "end": "^\\s*//\\s*#endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*\\[(?!\\/)\\w+|^\\s*<(?!\\?|/?(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b)([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*</\\1>)",
    "decreaseIndentPattern": "^\\s*\\[/\\w+\\]|^\\s*</(?!html)"
  }
}
